generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Typewriter {
  id      Int      @id @default(autoincrement())
  title   String
  created DateTime
}

model Aboutme {
  id         Int      @id @default(autoincrement())
  content    String   @db.LongText
  changeDate DateTime @default(now())
}

model Project {
  id        Int    @id @default(autoincrement())
  heading   String
  text      String
  imageUrl  String
  skillsUrl String
}
